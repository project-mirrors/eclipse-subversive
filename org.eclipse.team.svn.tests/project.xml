<project>
    <!-- the version of maven's project object model -->
    <pomVersion>3</pomVersion>
    <!-- a unique name for this project -->
    <id>com.polarion.subversive.tests</id>
    <!-- a short but descriptive name for the project -->
    <artifactId>subversive-tests</artifactId>
    <name>Subversive SVN Team Provider TestProject Plug-in</name>
    <!-- The version of the project under development, e.g.
       1.1, 1.2, 2.0-SNAPSHOT -->
    <groupId>polarion</groupId>
    <currentVersion>SNAPSHOT</currentVersion>
    <!-- details about the organization that 'owns' the project -->
    <organization />
    <!-- the year the project started -->
    <inceptionYear>2005</inceptionYear>
    <package>org.eclipse.team.svn.tests</package>
    <description>Subversive SVN Team Provider Tests Plug-in</description>
    <!-- a short description of what the project does -->
    <shortDescription>Subversive Ui Plug-in</shortDescription>
    <!-- the project home page -->
    <!-- the version control repository and http url for online access
       the connection element has the form:
       scm:<system>:<system specific connection string> -->
    <siteAddress>http://svn.polarion.org/repos/community/Subversive</siteAddress>
    <repository>
        <connection>scm:svn:http://svn.polarion.org/repos/community/Subversive/trunk/org.eclipse.team.svn.tests</connection>
        <url>http://svn.polarion.org/repos/community/Subversive/trunk/org.eclipse.team.svn.tests</url>
    </repository>
    <!-- any mailing lists for the project -->
    <!-- who the developers are for the project -->
    <developers>
        <developer>
            <name>Developer 1</name>
            <id>developer1</id>
        </developer>
    </developers>
    <!-- jar files the project is dependent on -->
    <dependencies>
      <dependency>
            <groupId>maven-plugins</groupId>
            <artifactId>maven-cobertura-plugin</artifactId>
            <version>1.1.1</version>
            <type>plugin</type>
            <url>http://maven-plugins.sourceforge.net/repository/maven-plugins/plugins/maven-cobertura-plugin-1.1.1.jar</url>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-test-plugin</artifactId>
            <version>1.7</version>
            <type>plugin</type>
            <url>http://www.apache.org/dyn/closer.cgi/java-repository/maven/plugins/maven-test-plugin-1.7.jar</url>
        </dependency>
        <dependency>
            <groupId>eclipse</groupId>
            <artifactId>eclipse</artifactId>
            <version>301</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>polarion</groupId>
            <artifactId>subversive-core</artifactId>
            <version>SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>polarion</groupId>
            <artifactId>subversive-ui</artifactId>
            <version>SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>svn</groupId>
            <artifactId>javasvn-javahl</artifactId>
            <jar>javasvn-javahl.jar</jar>
            <type>jar</type>
            <properties>
                <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>svn</groupId>
            <artifactId>javasvn</artifactId>
            <jar>javasvn.jar</jar>
            <type>jar</type>
            <properties>
                <eclipse.plugin.bundle>false</eclipse.plugin.bundle>
            </properties>
        </dependency>
    </dependencies>
    <!-- build information for the project -->
    <build>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>test_data</directory>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
    </build>
     <reports>
        <report>maven-cobertura-plugin</report>
        <!-- <report>maven-checkstyle-plugin</report> -->
    </reports>
</project>

