<feature
      id="org.eclipse.team.svn.core"
      label="%featureName"
      version="5.0.0.qualifier"
      provider-name="%providerName"
      plugin="org.eclipse.team.svn.core">
   <install-handler/>

   <description>
      The headless part of the Eclipse Team Provider for the Subversion version control system. For instructions about installing SVN connectors visit http://www.eclipse.org/subversive/downloads.php
   </description>

   <license url="license.html">
      %license
   </license>

   <url>
      <update label="%updateSiteName" url="http://download.eclipse.org/technology/subversive/1.1/headless-update-site/"/>
      <discovery label="%discoverySiteName" url="http://download.eclipse.org/technology/subversive/1.1/headless-update-site/"/>
   </url>

   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.team.core"/>
      <import plugin="org.eclipse.core.filesystem"/>
      <import plugin="org.eclipse.core.net" version="1.2.0" match="compatible"/>
      <import plugin="org.eclipse.equinox.security" version="1.0.0" match="compatible"/>
      <import plugin="com.ibm.icu"/>
   </requires>

   <plugin
         id="org.eclipse.team.svn.core"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.eclipse.team.svn.core.nl1"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

</feature>
